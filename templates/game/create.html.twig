{% extends "./base.html.twig" %}

{% block title %}Tworzenie nowej sesji{% endblock %}

{% block body %}
<div class="container-xl mt-1">
    <div class="row gy-5">
        <div class="col-12">
            <h1 class="text-center">
                Utwórz nowa sesję
            </h1>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-6 mx-auto">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nazwa sesji'}}) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <div class="form-check mb-3">
                                {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.active, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(form.active) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.owner) }}
                                {{ form_widget(form.owner, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.owner) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.players) }}
                                {{ form_widget(form.players, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
                                {{ form_errors(form.players) }}
                            </div>

                            <div class="d-flex justify-content-center mb-3">
                                <button class="btn btn-primary w-50" type="submit">Stwórz</button>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}