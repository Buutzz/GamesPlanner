{% extends 'base.html.twig' %}

{% block title %}Sesje{% endblock %}

{% block body %}

<div class="container-xl mt-1">
    <div class="row gy-5">
        <div class="col-12">
            <div class="session-header mb-5">
                <h1>Spis wszystkich sesji</h1>
                <a 
                    href="{{ path('create_game') }}"
                    class="edit-link text-success"
                    data-bs-toggle="tooltip" 
                    data-bs-placement="bottom" 
                    data-bs-original-title="Dodaj nową sesję"
                >
                    <i class="bi bi-plus-circle"></i>
                </a>
            </div><h1 class=""></h1>

            <div class="card text-white bg-primary" id="card-wrapper">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                    <th scope="col">Nazwa sesji</th>
                    <th scope="col">Status</th>
                    <th scope="col">DM</th>
                    </tr>
                </thead>
                <tbody>
                    {% for game in games %}
                    <tr class="table-active">
                        <td>
                            <a 
                                href="{{ path('game', {'id': game.id}) }}"
                            >
                                {{ game.name }} <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        </td>
                        <td>
                            <span class="
                            {% if game.active %}
                                text-success">Aktywna
                            {% else %}
                                text-danger">Nieaktywna
                            {% endif %}
                            </span>
                        </td>
                        <td>
                            {{ game.owner.name }}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
