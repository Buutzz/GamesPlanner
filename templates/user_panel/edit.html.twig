{% extends 'base.html.twig' %}

{% block title %}Edycja ustawie≈Ñ konta {{user.name}} {% endblock %}

{% block body %}
<div class="container-xl mt-5">
    <div class="row gy-5">
        <div class="col-12">
            <h1 class="text-center">
                Edytujesz profil {{ user.name }}
            </h1>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-6 mx-auto">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nick'}}) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <div class="d-flex justify-content-center mb-3">
                                <button class="btn btn-primary w-50" type="submit">Zapisz</button>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}